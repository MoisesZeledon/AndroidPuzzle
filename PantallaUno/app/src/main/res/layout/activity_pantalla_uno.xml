<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:visibility="visible"
    android:background="#ffffff"
    android:paddingRight="20dp"
    android:paddingTop="50dp"
    android:paddingLeft="10dp">





    <ImageView
        android:id="@+id/imalinux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        android:longClickable="true"
        android:maxHeight="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:background="#ffffff"
        android:paddingLeft="60dp"
        android:layout_alignTop="@+id/txtTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:id="@+id/entrar"
        android:textColor="#c7fffffb"
        android:textStyle="bold"
        android:background="#c7ecb210"
        android:padding="45dp"
        android:paddingRight="2dp"
        android:layout_alignBottom="@+id/imalinux"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="JUEGO DEL HAMBRE"
        android:textColor="#f0f70f0a"
        android:textStyle="bold"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:text="SALIR"
        android:id="@+id/btsalir"
        android:paddingRight="100dp"
        android:paddingLeft="20dp"
        android:padding="30dp"
        android:textColor="#c7ece5df"
        android:background="#c7ec1306"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />


</RelativeLayout>
